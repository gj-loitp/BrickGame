<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvScoresTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/scores"
        android:textColor="@color/colorPrimary"
        android:textSize="60sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFirstScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/initial_score"
        android:textColor="@color/colorAccent"
        android:textSize="60sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSecondScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/initial_score"
        android:textColor="@color/colorPrimary"
        android:textSize="60sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvThirdScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/initial_score"
        android:textColor="@color/colorPrimary"
        android:textSize="60sp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen48dp"
        android:background="@drawable/button_circle"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/shareButtonPadding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llScores"
        app:srcCompat="@drawable/ic_share" />

</androidx.appcompat.widget.LinearLayoutCompat>
